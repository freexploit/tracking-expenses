cabal-version:      3.0
name:               tracking-expenses
version:            0.1.0.0
-- synopsis:
-- description:
license:            GPL-3.0-only
author:             Christopher Valerio
maintainer:         test@test.com
-- copyright:
build-type:         Simple
extra-doc-files:    CHANGELOG.md
-- extra-source-files:

data-files:
    assets/schema.gql

common warnings
    ghc-options: -Wall

executable tracking-expenses
    import:           warnings
    main-is:          Main.hs
    other-modules:
        Scrapper
        Env
        Graphql

    -- other-extensions: 
    build-depends:    
        base >=4.8
        , HaskellNet
        , HaskellNet-SSL
        , bytestring
        , purebred-email
        , generic-lens
        , lens
        , old-time
        , time
        , flow
        , tagsoup
        , transformers
        , text 
        , regex-tdfa
        , morpheus-graphql
        , morpheus-graphql-core
        , morpheus-graphql-subscriptions

    hs-source-dirs:   app
    default-language: Haskell2010
